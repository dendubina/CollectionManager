@using CollectionManager.WEB.Extensions
@model IEnumerable<CollectionsManager.BLL.DTO.Collections.UsersCollectionToReturnDto>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@User.GetUserName()'s collections</title>
    <link rel="stylesheet" href="~/css/UsersCollections.css" />
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "CreateCollection", "Collections", null, new { @class = "btn btn-primary" })
    </p>
@if (Model.Any())
{
    <table class="table table-striped users-collections-table">
        <thead>
        <tr>
            <th>
                Image
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemsCount)
            </th>
            <th style="text-align: center">
                Action
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var collection in Model) {
            <tr>
                <td>
                    <img src="@collection.ImageSource" alt=":(" style="display: block; height: 50px; width: 50px"/>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => collection.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => collection.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => collection.ItemsCount)
                </td>
                <td style="text-align: center">
                    @Html.ActionLink("Edit", "EditCollection", new { collectionId = collection.Id }) |
                    @Html.ActionLink("Details", "CollectionDetails", new { collectionId = collection.Id }) |
                    @Html.ActionLink("Delete", "DeleteCollection", new { collectionId = collection.Id })
                </td>
            </tr>
        }
        </tbody>
    </table>
}
</body>
</html>
