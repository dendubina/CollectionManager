@model CollectionsManager.BLL.DTO.User.SignInModel


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/css/SignIn.css" />
    <title>SignIn</title>
</head>
<body>

<div class="text-center">
    <form asp-action="SignIn" class="form-signin">
        <img class="mb-4" src="~/unnamed.png" alt="" width="72" height="72">
        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input asp-for="Email" type="text" id="inputEmail" class="form-control" placeholder="Email">
        <span asp-validation-for="Email" class="text-danger"></span>

        <input asp-for="Password" type="password" id="inputPassword" class="form-control" placeholder="Password">
        <span asp-validation-for="Password" class="text-danger"></span>

        <button class="btn btn-lg btn-primary" type="submit">Sign in</button>
    </form>
</div>

</body>
</html>
